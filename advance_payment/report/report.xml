<odoo>
    <data>
        <record id="paper_format_advance_payment" model="report.paperformat">
            <field name="name">INTERIM PAYMENT CERTIFICATE</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">40</field>
            <field name="margin_bottom">15</field>
            <field name="margin_left">5</field>
            <field name="margin_right">5</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">35</field>
            <field name="dpi">90</field>
        </record>

        <report
                id="advance_payment_report_pdf"
                string="INTERIM PAYMENT CERTIFICATE"
                model="account.move"
                report_type="qweb-pdf"
                name="advance_payment.report_advance_amount_temp"
                file="advance_payment.report_advance_amount_temp"
                paperformat="paper_format_advance_payment"
        />

        <!--        Local Purchase Order-->
        <record id="paper_format_local_po" model="report.paperformat">
            <field name="name">Local Purchase Order</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">35</field>
            <field name="margin_bottom">15</field>
            <field name="margin_left">10</field>
            <field name="margin_right">10</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">35</field>
            <field name="dpi">90</field>
        </record>

        <report
                id="local_po_report_pdf"
                string="Local Purchase Order"
                model="purchase.order"
                report_type="qweb-pdf"
                name="advance_payment.report_local_po_temp"
                file="advance_payment.report_local_po_temp"
                paperformat="paper_format_local_po"
        />
    </data>
</odoo>