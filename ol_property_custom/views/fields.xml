<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sales_fields" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Invoice feilds display on left -->
            <xpath expr="//field[@name='sale_order_template_id']" position="after">
                <field name="project" readonly="1" force_save="1" attrs="{'readonly':[('state','=','sale')]}"/>
                <field name="building" readonly="1" force_save="1" attrs="{'readonly':[('state','=','sale')]}"/>
                <field name="floor" readonly="1" force_save="1" attrs="{'readonly':[('state','=','sale')]}"/>
                <field name="unit" readonly="1" force_save="1" attrs="{'readonly':[('state','=','sale')]}"/>
            </xpath>
        </field>
    </record>

    <record id="invoice_fields" model="ir.ui.view">
        <field name="name">account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Invoice feilds display on left -->
            <xpath expr="//field[@name='payment_reference']" position="after">
                <field name="project" attrs="{'invisible': [('move_type', '!=', 'out_invoice')], 'readonly': [('state', '=', 'posted')]}"/>
                <field name="building" attrs="{'invisible': [('move_type', '!=', 'out_invoice')], 'readonly': [('state', '=', 'posted')]}"/>
                <field name="floor" attrs="{'invisible': [('move_type', '!=', 'out_invoice')], 'readonly': [('state', '=', 'posted')]}"/>
                <field name="unit" attrs="{'invisible': [('move_type', '!=', 'out_invoice')], 'readonly': [('state', '=', 'posted')]}"/>
            </xpath>
        </field>
    </record>

    <record id="stock_fields" model="ir.ui.view">
        <field name="name">stock.picking.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='picking_type_id']" position="after">
                <field name="project" attrs="{'readonly':[('state','=','done')]}"/>
                <field name="building" attrs="{'readonly':[('state','=','done')]}"/>
                <field name="floor" attrs="{'readonly':[('state','=','done')]}"/>
                <field name="unit" attrs="{'readonly':[('state','=','done')]}"/>
            </xpath>
        </field>
    </record>
</odoo>
