<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>

        <template id="journal_entry_template_report_view">
            <t t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
                <div class="page">
                    <br/>
                    <div class="oe_structure"/>
                    <div>
                        <h2 class="text-center mb32">
                            <strong>Journal Entry</strong>
                        </h2>
                    </div>
                    <br/>
                    <div class="row">
                        <div class="col-12">
                            <table style="width:100%;background:white;border:1px solid #e1e1e1; font-size:13px;"
                                   class="table">
                                <tbody>
                                    <tr>
                                        <td>
                                            <strong>Created By:</strong>
                                        </td>
                                        <td>
                                            <p t-field="o.create_uid.name"/>
                                        </td>
                                        <td>
                                            <strong>Printed By:</strong>
                                        </td>
                                        <td>
                                            <p t-field="o.user_id.name"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <strong>Branch :</strong>
                                        </td>
                                        <td>
                                            <p t-field="o.branch_id"/>
                                        </td>
                                        <td>
                                            <strong>Accounting Date :</strong>
                                        </td>
                                        <td>
                                            <p t-field="o.date"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <strong>Reference :</strong>
                                        </td>
                                        <td>
                                            <p t-field="o.ref"/>
                                        </td>
                                        <td>
                                            <strong>Journal :</strong>
                                        </td>
                                        <td>
                                            <p t-field="o.journal_id"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <br/>
                    <div class="row">
                        <div class="col-12">
                            <table class="table table-sm" width="100%" style="font-size:12px;">
                                <thead style="color: black;">
                                    <tr>
                                        <th width="25%">Account</th>
                                        <th width="8%">Partner</th>
                                        <th width="8%">Label</th>
                                        <th width="8%">Branch</th>
                                        <th width="14%">Analytic Tags</th>
                                        <th width="13%">Currency</th>
                                        <th width="8%">Debit</th>
                                        <th width="8%">Credit</th>
                                        <th width="8%">Tax Grids</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-set="total" t-value="0.0"/>
                                    <t t-set="total1" t-value="0.0"/>
                                    <t t-foreach="o.line_ids" t-as="line">
                                        <tr>
                                            <td width="25%">
                                                <span t-field="line.account_id"/>
                                            </td>
                                            <td width="8%">
                                                <span t-field="line.partner_id"/>
                                            </td>
                                            <td width="8%">
                                                <span t-field="line.name"/>
                                            </td>
                                            <td width="11%">
                                                <span t-field="line.branch_id"/>
                                            </td>
                                            <td width="14%">
                                                <span t-field="line.analytic_tag_ids"/>
                                            </td>
                                            <td width="7%">
                                                <span t-field="line.currency_id"/>
                                            </td>
                                            <td width="8%">
                                                <span t-field="line.debit"/>
                                            </td>
                                            <td width="8%">
                                                <span t-field="line.credit"/>
                                            </td>
                                            <td width="10%">
                                                <span t-field="line.tax_tag_ids"/>
                                            </td>
                                        </tr>
                                        <t t-set="total" t-value="total + line.debit"/>
                                        <t t-set="total1" t-value="total1 + line.credit"/>
                                    </t>
                                    <tr style="height:25px">
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td>
                                            <strong>Total  <span t-field="o.line_ids.currency_id"/>:</strong>
                                        </td>
                                        <td width="10%">
                                            <strong>
                                                <span>
                                                    <t t-esc="total"/> <span t-field="o.line_ids.currency_id"/>
                                                </span>
                                            </strong>
                                        </td>
                                        <td width="10%">
                                            <strong>
                                                <span>
                                                    <t t-esc="total1"/> <span t-field="o.line_ids.currency_id"/>
                                                </span>
                                            </strong>
                                        </td>
                                        <td></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </t>
        </template>

        <template id="journal_entry_report_template_id">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="bi_print_journal_entries.journal_entry_template_report_view" t-lang="o.partner_id.lang"/>
                </t>
            </t>
        </template>

    </data>
</odoo>